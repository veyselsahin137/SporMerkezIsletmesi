@{
    ViewData["Title"] = "Yönetim Paneli";
}

<div class="container mt-4">
    <h2 class="mb-4">Yönetim Paneli</h2>

    <!--  Salon Yönetimi kartı -->
    <div class="row g-3">
        <div class="col-md-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Salon Yönetimi</h5>
                    <p class="card-text flex-grow-1">
                        Spor salonu kayıtlarını ekle, düzenle, sil.
                    </p>
                    <a asp-controller="Salon" asp-action="Index" class="btn btn-primary mt-auto">
                        Salonları Yönet
                    </a>
                </div>
            </div>
        </div>

        <!--  Hizmet Yönetimi kartı -->
        <div class="col-md-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Hizmet Yönetimi</h5>
                    <p class="card-text flex-grow-1">
                        Fitness, yoga, pilates gibi hizmetleri yönet.
                    </p>
                    <a asp-controller="Hizmet" asp-action="Index" class="btn btn-primary mt-auto">
                        Hizmetleri Yönet
                    </a>
                </div>
            </div>
        </div>

        <!--  Antrenör Yönetimi kartı -->
        <div class="col-md-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Antrenör Yönetimi</h5>
                    <p class="card-text flex-grow-1">
                        Antrenör bilgilerini ve aktiflik durumlarını düzenle.
                    </p>
                    <a asp-controller="Antrenor" asp-action="Index" class="btn btn-primary mt-auto">
                        Antrenörleri Yönet
                    </a>
                </div>
            </div>
        </div>

        <!--  İlişkiler & Müsaitlik kartı -->
        <div class="col-md-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">İlişkiler & Müsaitlik</h5>
                    <p class="card-text flex-grow-1">
                        Antrenör-hizmet ilişkileri ve müsaitlik saatleri.
                    </p>
                    <a asp-controller="AntrenorHizmet" asp-action="Index" class="btn btn-outline-primary mb-2">
                        Antrenör-Hizmet
                    </a>
                    <a asp-controller="AntrenorMusaitlik" asp-action="Index" class="btn btn-outline-primary">
                        Müsaitlik Saatleri
                    </a>
                </div>
            </div>
        </div>

        <!--  üye yönetimi kartı -->
        <div class="col-md-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Üye Yönetimi</h5>
                    <p class="card-text flex-grow-1">
                        Üye bilgilerini görüntüle ve düzenle.
                    </p>
                    <a asp-controller="Uye"
                       asp-action="Index"
                       class="btn btn-primary mt-auto">
                        Üyeleri Yönet
                    </a>
                </div>
            </div>
        </div>

        <!--  randevu yönetimi kartı -->
        <div class="col-md-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Randevu Yönetimi</h5>
                    <p class="card-text flex-grow-1">
                        Tüm randevuları görüntüle, kontrol et ve yönet.
                    </p>
                    <a asp-controller="Randevu"
                       asp-action="Index"
                       class="btn btn-primary mt-auto">
                        Randevuları Yönet
                    </a>
                </div>
            </div>
        </div>

    </div>

    <!-- ⭐ REST API kartı -->
    <div class="row g-3 mt-3">
        <div class="col-md-3">
            <div class="card h-100 shadow-sm border-info">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">REST API</h5>
                    <p class="card-text flex-grow-1">
                        Antrenör verilerini REST API + AJAX ile görüntüle.
                    </p>
                    <a asp-controller="Home" asp-action="RestApi" class="btn btn-info mt-auto text-white">
                        REST API
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
