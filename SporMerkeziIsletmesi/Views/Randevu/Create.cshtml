@model SporMerkeziIsletmesi.Models.Randevu

@{
    ViewData["Title"] = "Yeni Randevu";
}

<h2>Yeni Randevu Al</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="AntrenorId" class="form-label">Antrenör</label>
        <select asp-for="AntrenorId" class="form-select" asp-items="ViewBag.AntrenorId"></select>
    </div>

    <div class="mb-3">
        <label asp-for="HizmetId" class="form-label">Hizmet</label>
        <select asp-for="HizmetId" class="form-select" asp-items="ViewBag.HizmetId"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Tarih" class="form-label">Tarih / Saat</label>
        <input asp-for="Tarih" type="datetime-local" class="form-control" />
        <span asp-validation-for="Tarih" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Randevu Al</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
