@model SporMerkeziIsletmesi.Models.Randevu

@{
    ViewData["Title"] = "Randevu Al";
}

<h2>Yeni Randevu Al</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label>Antrenör</label>
        <select asp-for="AntrenorId" class="form-control" asp-items="ViewBag.AntrenorId"></select>
    </div>

    <div class="form-group">
        <label>Hizmet</label>
        <select asp-for="HizmetId" class="form-control" asp-items="ViewBag.HizmetId"></select>
    </div>

    <div class="form-group">
        <label>Tarih / Saat</label>
        <input asp-for="Tarih" type="datetime-local" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-3">Randevu Al</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
