<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SporMerkeziIsletmesi</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SporMerkeziIsletmesi.styles.css" asp-append-version="true" />
</head>
<body class="bg-light d-flex flex-column min-vh-100">
    <!-- Üst koyu şerit (Navbar) -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark shadow-sm">
            <div class="container">
                <!-- Logo + İsim -->
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="me-2">🏋️‍♀️</span>
                    <span>Spor Merkezi</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- 🔹 MENÜ (burayı güncelledik) -->
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">
                                Ana Sayfa
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">
                                Hakkında &amp; İletişim
                            </a>
                        </li>

                        @* Giriş yapmış HERKES (Admin + Üye) yapay zekâ sayfasını görebilsin *@
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning" asp-controller="YapayZeka" asp-action="Oneri">
                                    Yapay Zekâ Öneri
                                </a>
                            </li>
                        }

                        @*  Sadece Admin rolündeki kullanıcılar Admin Paneli dropdown'unu görsün *@
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="adminDropdown"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin Paneli
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Index">
                                            Yönetim Ana Sayfa
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Salon" asp-action="Index">
                                            Salon Yönetimi
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Hizmet" asp-action="Index">
                                            Hizmet Yönetimi
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Antrenor" asp-action="Index">
                                            Antrenör Yönetimi
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="AntrenorHizmet" asp-action="Index">
                                            Antrenör-Hizmet
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="AntrenorMusaitlik" asp-action="Index">
                                            Antrenör Müsaitlikleri
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Home" asp-action="RestApi">
                                            REST API
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Sayfa içeriği -->
    <div class="container mt-4 flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Alt koyu şerit (Footer) -->
    <footer class="mt-auto py-3 bg-dark text-light border-top">
        <div class="container">
            <div class="row small">
                <div class="col-md-4 mb-2 mb-md-0">
                    <strong>Spor Merkezi İşletmesi</strong>
                </div>
                <div class="col-md-4 mb-2 mb-md-0">
                    <div><strong>Hızlı Bağlantılar</strong></div>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="text-decoration-none text-light d-block">
                        Ana Sayfa
                    </a>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-light d-block">
                        Hakkında &amp; İletişim
                    </a>
                </div>
                <div class="col-md-4">
                    <div><strong>İletişim</strong></div>
                    <div>Telefon: 0 (264) 273 10 54</div>
                    <div>E-posta: info@spormerkezi.com</div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
